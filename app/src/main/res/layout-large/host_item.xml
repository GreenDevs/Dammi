<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/australia"
    android:layout_margin="2dp"
    >



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#75000000"
        android:layout_height="250dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/profile_size"
            android:layout_height="@dimen/profile_size"
            android:src="@drawable/higenic"
            android:layout_margin="10dp"
            android:id="@+id/imgProfile"
            />

        <RelativeLayout
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/patro_orange"
                android:textSize="20sp"
                android:text="Social Tours"
                android:id="@+id/host_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_below="@+id/host_name"
                android:textSize="20sp"
                android:id="@+id/rating_text"
                android:textColor="@color/white"
                android:text="5 star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_below="@+id/host_name"
                android:layout_toRightOf="@+id/rating_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_star_rate_white_18dp"/>

            <TextView
                android:layout_below="@+id/rating_text"
                android:textSize="20sp"
                android:text="5 EVENTS"
                android:textColor="@color/white"
                android:id="@+id/events_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_below="@+id/rating_text"
                android:layout_toRightOf="@+id/events_count"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_motorcycle_white_24dp"/>


            <TextView
                android:layout_below="@+id/events_count"
                android:textSize="20sp"
                android:text="5 ACTIVITY"
                android:textColor="@color/white"
                android:id="@+id/activity_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_below="@+id/events_count"
                android:layout_toRightOf="@+id/activity_count"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_motorcycle_white_24dp"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>