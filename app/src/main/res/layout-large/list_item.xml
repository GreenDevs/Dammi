<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/grid_margin"
    card_view:cardCornerRadius="@dimen/card_radi"
    card_view:cardElevation="@dimen/card_elev">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/colombo"
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <!--
        <TextView
            android:id="@+id/item_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="COLOMBIA"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />  -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/ll"
            android:background="#a5000000"
            >

            <TextView
                android:id="@+id/item_title"
                android:textSize="@dimen/text_size_featured"
                android:textColor="#fff"
                android:text="The Inc Trail to Machupichhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/text_size_featured"
                android:textColor="@color/patro_orange"
                android:text="CUSO.PERU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/text_size_featured"
                android:textColor="#fff"
                android:text="with jose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:text="$875"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/check_button"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="4N/3D"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_margin="20dp"
            android:background="@drawable/circle"
            android:layout_width="@dimen/circle_dia_large"
            android:layout_height="@dimen/circle_dia_large"
            android:elevation="8dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>